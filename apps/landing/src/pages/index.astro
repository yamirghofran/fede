---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="container">
        <div class="profile">
            <h1 class="name">FEDE</h1>
            <p class="bio">Film embedding and Discovery Engine</p>
        </div>

        <div class="links">
            <a
                class="link"
                href="https://github.com/yamirghofran/fede"
                target="_blank"
                rel="noopener noreferrer"
            >
                <span class="icon">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                        ></path></svg
                    >
                </span>
                <span class="label">Fede Repository</span>
                <span class="arrow">→</span>
            </a>

            <a
                class="link"
                href="https://github.com/users/yamirghofran/projects/7"
                target="_blank"
                rel="noopener noreferrer"
            >
                <span class="icon">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect x="2" y="7" width="20" height="14" rx="2" ry="2"
                        ></rect><path
                            d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                        ></path></svg
                    >
                </span>
                <span class="label">GitHub Project</span>
                <span class="arrow">→</span>
            </a>
        </div>
    </main>

    <style>
        :global(*) {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        :global(html, body) {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
        }

        .container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
            background-color: #fafafa;
        }

        .profile {
            text-align: center;
            margin-bottom: 3rem;
        }

        .name {
            font-size: 2rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
            font-family:
                -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                "Helvetica Neue", Arial, sans-serif;
        }

        .bio {
            font-size: 1rem;
            color: #6b7280;
            font-family:
                -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                "Helvetica Neue", Arial, sans-serif;
        }

        .links {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            width: 100%;
            max-width: 400px;
        }

        .link {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem 1.5rem;
            background: #ffffff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .link:hover {
            background: #f9fafb;
            border-color: #d1d5db;
            transform: translateY(-2px);
            box-shadow:
                0 4px 6px -1px rgba(0, 0, 0, 0.05),
                0 2px 4px -1px rgba(0, 0, 0, 0.03);
        }

        .icon {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #374151;
        }

        .label {
            flex: 1;
            font-size: 1rem;
            font-weight: 500;
            color: #111827;
            font-family:
                -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                "Helvetica Neue", Arial, sans-serif;
        }

        .arrow {
            color: #9ca3af;
            transition: color 0.2s ease;
        }

        .link:hover .arrow {
            color: #374151;
        }

        @media (max-width: 480px) {
            .name {
                font-size: 1.75rem;
            }

            .link {
                padding: 1rem 1.25rem;
            }
        }
    </style>
</Layout>
